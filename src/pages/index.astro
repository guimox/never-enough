---
import eye from "../assets/eye.jpg";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="NEVER SATISFIED">
  <div class="relative h-screen overflow-hidden">
    <h1 id="text" class="px-20 text-4xl fixed top-50 bottom-80 text-white md:text-6xl font-bold font-avilock uppercase" id="text">We are never satisfied</h1>
    <Image src={eye} alt="eye" class="w-full object-cover h-full" />
  </div>
</Layout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    gsap.to("#text", { duration: 1, x: 300, ease: "bounce" });
  });
</script>
